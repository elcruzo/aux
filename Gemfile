# Gemfile for Aux iOS project
source "https://rubygems.org"

# Fastlane for iOS deployment automation
gem "fastlane", "~> 2.220"

# Additional gems for CI/CD
gem "xcpretty", "~> 0.3"  # Better xcodebuild output formatting
gem "xcpretty-travis-formatter", "~> 1.0"  # Travis CI formatting

# Development dependencies
group :development do
  gem "rubocop", "~> 1.0"  # Ruby code style checker
end
